# Gunakan image PHP 8.2 dengan Apache
FROM php:8.2-apache

# Set working directory
WORKDIR /var/www/html

# Install dependency system dan ekstensi PHP yang dibutuhkan
RUN apt-get update && apt-get install -y \
    libpng-dev libjpeg-dev libfreetype6-dev zip unzip git curl libicu-dev libonig-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd intl pdo pdo_mysql mysqli \
    && docker-php-ext-enable pdo_mysql mysqli \
    && a2enmod rewrite \
    && rm -rf /var/lib/apt/lists/*

# Install Composer dari image resmi
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy semua file project ke container
COPY . /var/www/html

# Jalankan composer install jika ada composer.json
RUN if [ -f composer.json ]; then composer install --no-interaction --no-progress --prefer-dist; fi

# Set permission agar Apache bisa akses
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

# Expose port 8080
EXPOSE 8080

# Jalankan Apache
CMD ["apache2-foreground"]
